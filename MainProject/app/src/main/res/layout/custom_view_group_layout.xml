<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="com.example.homework2.customviews.CustomViewGroup">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/avatar_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="12dp"
        android:src="@mipmap/ic_launcher" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/message_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="14dp"
        android:textColor="@color/teal_700"
        android:textSize="22sp"
        tools:text="Title text" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        tools:text="Если бы мы знали что это такое, мы не знаем что это такое, очень страшно" />

    <com.example.homework2.customviews.CustomFlexBox
        android:id="@+id/custom_flex_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="0dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/add_emoji"
            style="@style/CustomTextView"
            android:layout_width="48dp"
            android:layout_height="38dp"
            android:layout_marginTop="5dp"
            android:padding="12dp"
            android:src="@drawable/ic_add" />

    </com.example.homework2.customviews.CustomFlexBox>

</merge>
