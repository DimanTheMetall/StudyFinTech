<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp">

    <View
        android:id="@+id/shape_top"
        android:layout_width="60dp"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bottom_sheet_shape_background"
        app:layout_constraintBottom_toBottomOf="@id/grid_emoji"
        app:layout_constraintBottom_toTopOf="@id/grid_emoji"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/grid_emoji"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnCount="7"
        android:orientation="horizontal"
        android:theme="@style/BottomSheetDialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shape_top">

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
