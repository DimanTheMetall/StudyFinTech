<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <View
        android:id="@+id/help_shape_top"
        android:layout_width="60dp"
        android:layout_height="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bottom_sheet_shape_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/add_reaction_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_add_reaction"
        app:layout_constraintEnd_toStartOf="@id/delete_message_image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/help_shape_top" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/delete_message_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="@id/add_reaction_image_view"
        app:layout_constraintEnd_toStartOf="@id/edit_message_image_view"
        app:layout_constraintStart_toEndOf="@id/add_reaction_image_view"
        app:layout_constraintTop_toTopOf="@id/add_reaction_image_view" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/edit_message_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_edit"
        app:layout_constraintBottom_toBottomOf="@id/delete_message_image_view"
        app:layout_constraintEnd_toStartOf="@id/move_to_topic_image_view"
        app:layout_constraintStart_toEndOf="@id/delete_message_image_view"
        app:layout_constraintTop_toTopOf="@id/delete_message_image_view" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/move_to_topic_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_move"
        app:layout_constraintBottom_toBottomOf="@id/edit_message_image_view"
        app:layout_constraintEnd_toStartOf="@id/copy_message_image_view"
        app:layout_constraintStart_toEndOf="@id/edit_message_image_view"
        app:layout_constraintTop_toTopOf="@id/edit_message_image_view" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/copy_message_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_content_copy"
        app:layout_constraintBottom_toBottomOf="@id/move_to_topic_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/move_to_topic_image_view"
        app:layout_constraintTop_toTopOf="@id/move_to_topic_image_view" />

</androidx.constraintlayout.widget.ConstraintLayout>
